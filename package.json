{
	"name": "fintrack",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:start": "export PATH=\"$HOME/.turso:$PATH\" && turso dev --port 8080 --db-file ./fintrack.db",
		"db:dev": "export PATH=\"$HOME/.turso:$PATH\" && turso dev --port 8080",
		"dev:full": "concurrently \"pnpm db:start\" \"pnpm dev\" --names \"turso,svelte\" --prefix-colors \"blue,green\"",
		"typesafe-i18n": "typesafe-i18n",
		"db:seed": "node scripts/seed.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@iconify-json/heroicons": "^1.2.2",
		"@iconify-json/lucide": "^1.2.67",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@unocss/reset": "^66.5.1",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.2",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.4.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.43.0",
		"unocss": "^66.5.1",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@lucia-auth/adapter-sqlite": "^3.0.2",
		"@node-rs/argon2": "^2.0.2",
		"lucia": "^3.2.2",
		"nanoid": "^5.1.5",
		"typesafe-i18n": "^5.26.2"
	}
}
